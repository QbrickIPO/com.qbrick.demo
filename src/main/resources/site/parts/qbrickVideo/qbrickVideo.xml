<part>
  <display-name>Qbrick Video Player</display-name>
  <config>
    <field-set name="config">
      <label>Config</label>
      <items>
        <input name="mediaId" type="CustomSelector">
      <label>Select video</label>
	  <occurrences minimum="0" maximum="1"/>
	  <config>
    <service>video-selector-service</service>
  </config>
    </input>
		<input name="autostart" type="CheckBox">
		<label>Automatic playback</label>
		<occurrences minimum="0" maximum="1"/>
		</input>
		<input name="replay" type="CheckBox">
<label>Replay video when finished</label>
<occurrences minimum="0" maximum="1"/>
</input>
<input name="mute" type="CheckBox">
<label>Mute audio on playback</label>
<occurrences minimum="0" maximum="1"/>
</input>
      </items>
    </field-set>
  </config>
</part>